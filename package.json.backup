{
  "name": "whatsapp-auto-react-desktop",
  "version": "1.0.0",
  "description": "WhatsApp Auto React Desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.whatsapp.auto.react",
    "productName": "WhatsApp Auto React Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WhatsApp Auto React"
    }
  },
  "dependencies": {
    "electron": "^27.3.11",
    "whatsapp-web.js": "^1.25.0",
    "qrcode-terminal": "^0.12.0",
    "puppeteer": "^21.11.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  }
}
